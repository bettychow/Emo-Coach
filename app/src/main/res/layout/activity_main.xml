<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addDummy"
        android:text="Add Dummy"/>

    <Button
        android:id="@+id/thirty_days_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/thirty_days_swings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swings"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/today"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="How are you feeling now?"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myRadioGroup"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/happy"
            android:text="Happy"
            android:drawableRight="@drawable/happy_emoji_icon_b"
            android:drawablePadding="5dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joyful"
            android:drawableRight="@drawable/new_tears_of_joy_emoji_a"
            android:drawablePadding="5dp"
            android:text="Joyful"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/peaceful"
            android:drawableRight="@drawable/heart_eyes_emoji_large_a"
            android:drawablePadding="5dp"
            android:text="Satisfied"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-343dp"
            android:layout_marginTop="40dp"
            android:text="Energetic"
            android:drawableRight="@drawable/sunglasses_cool_emoji_a"
            android:drawablePadding="5dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="40dp"
            android:text="Excited"
            android:drawableRight="@drawable/grinning_emoji_with_smiling_eyes_a"
            android:drawablePadding="5dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="40dp"
            android:text="Peaceful"
            android:drawableRight="@drawable/slightly_smiling_face_emoji_a"
            android:drawablePadding="5dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-370dp"
            android:layout_marginTop="80dp"
            android:text="Sad"
            android:drawableRight="@drawable/sad_face_emoji_a"
            android:drawablePadding="5dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="80dp"
            android:text="Angry"
            android:drawableRight="@drawable/angry_emoji_a"
            android:drawablePadding="5dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="80dp"
            android:text="Guilty"
            android:drawableRight="@drawable/sweat_emoji_icon_a"
            android:drawablePadding="5dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="120dp"
            android:text="Furious"
            android:drawableRight="@drawable/very_angry_emoji_a"
            android:drawablePadding="5dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="120dp"
            android:text="Tired"
            android:drawableRight="@drawable/tired_face_emoji_a"
            android:drawablePadding="5dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="120dp"
            android:text="Frustrated"
            android:drawableRight="@drawable/confounded_face_emoji_a"
            android:drawablePadding="5dp"/>


    </RadioGroup>



    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Save"/>

    <TextView
        android:id="@+id/text_view_emo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/feelings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am feeling..."/>

    <ListView
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emotions"/>


</LinearLayout>

</ScrollView>